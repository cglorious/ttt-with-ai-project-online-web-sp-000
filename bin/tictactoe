#!/usr/bin/env ruby

require_relative '../config/environment'

puts "Welcome to Tic-Tac-Toe!"

  def start_game
    puts "How many players? Enter 0, 1, 2."
    answer = gets.strip

    if answer = "0"
      Game.new(Players::Computer.new("X"), Players::Computer.new("O"), Board.new)

    elsif answer = "1"
      puts "Would you like to go first? Enter YES or NO."
      input = gets.strip
        if input.upcase = "YES"
          Game.new(Players::Human.new("X"), Players::Computer.new("O"), Board.new)
        elsif input.upcase = "NO"
          Game.new(Players::Computer.new("X"), Players::Human.new("O"), Board.new)
        end

    elsif answer = "2"
      Game.new(Players::Human.new("X"), Players::Human.new("O"), Board.new)
    end

    puts "Would you like to start a new game? Enter YES or NO."

  end

start_game until gets.strip.upcase = "NO"
