#!/usr/bin/env ruby

require 'pry'

require_relative '../config/environment'

puts "Welcome to Tic-Tac-Toe!"
puts "How many players? Enter 0, 1, 2."

  def start_game
    answer = gets.strip

    case answer
      when "0"
        game = Game.new(Players::Computer.new("X"), Players::Computer.new("O"), Board.new)
        until game.over?
          game.play
        end
      when "1"
        puts "Would you like to go first? Enter YES or NO."
        input = gets.strip
          if input.upcase! == "YES"
            game = Game.new(Players::Human.new("X"), Players::Computer.new("O"), Board.new)
            until game.over?
              game.play
            end
          elsif input.upcase! == "NO"
            game = Game.new(Players::Computer.new("X"), Players::Human.new("O"), Board.new)
            until game.over?
              game.play
            end
          end
      when "2"
        game = Game.new(Players::Human.new("X"), Players::Human.new("O"), Board.new)
        until game.over?
          game.play
        end
    end

    #binding.pry

    puts "Would you like to start a new game? Enter YES or NO."
  end


start_game #until gets.strip.upcase! == "NO"
